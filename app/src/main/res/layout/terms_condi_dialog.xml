<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/dp_10"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/termsLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_15">
        <ImageView
            android:id="@+id/imgboxTerms"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_22"
            android:layout_centerVertical="true"
            android:src="@drawable/login_tick_un"/>
        <TextView
            android:id="@+id/tvDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_toEndOf="@id/imgboxTerms"
            android:text="@string/str_terms_and_privacy"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/edt_def_hint_color"
            android:fontFamily="@font/segoeui_0"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/notifiLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_15">
        <ImageView
            android:id="@+id/imgAdrs"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_22"
            android:layout_centerVertical="true"
            android:src="@drawable/login_tick_un"/>
        <TextView
            android:id="@+id/tvNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_toEndOf="@id/imgAdrs"
            android:text="@string/tick_this_box_if_you_wish_to_receive_escalate_marketing_communications_to_your_email_address"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/edt_def_hint_color"
            android:fontFamily="@font/segoeui_0"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btnDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_70sdp"
        android:layout_marginEnd="@dimen/_70sdp"
        android:layout_gravity="center"
        android:text="Done"
        android:background="@drawable/btn_gradient"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:fontFamily="@font/segoeui_0"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_20"
        android:textSize="@dimen/sp_20"
        android:paddingStart="@dimen/dp_30"
        android:paddingEnd="@dimen/dp_30"
        android:paddingBottom="@dimen/dp_4"
        />
</LinearLayout>