<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" tools:ignore="MissingDefaultResource">

    <item android:state_checked="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"
            android:visible="true"
            android:dither="true"
            android:useLevel="false">
           <!-- <stroke android:width="@dimen/dp_1"
                android:color="@color/white"/>-->
            <solid android:color="@color/colorFollowing"/>
            <corners
                android:radius="@dimen/dp_12"/>
            <size
                android:width="@dimen/dp_40"
                android:height="@dimen/dp_24" />
        </shape>
    </item>

    <item android:state_checked="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"
            android:visible="true"
            android:dither="true"
            android:useLevel="false">
          <!--  <stroke android:width="@dimen/dp_1"
                android:color="@color/backgroundColour"/>-->
            <solid android:color="@color/colorHeart"/>
            <corners
                android:radius="@dimen/dp_12"/>
            <size
                android:width="@dimen/dp_40"
                android:height="@dimen/dp_24" />
        </shape>
    </item>
</selector>