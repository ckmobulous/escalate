<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@font/segoeuil_1</item>

        <!-- To change the popup menu and app text color  -->
      <!--  <item name="android:textColor">@color/txt_black</item>
        <item name="android:actionMenuTextColor">@color/txt_black</item>-->
        <item name="android:itemTextAppearance">@style/myCustomMenuTextApearance</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="actionMenuTextColor">@color/txt_black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/segoeui_0</item>

    </style>

    <style name="myCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/txt_black</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionButtonStyle">@style/ActionButton</item>
        <item name="android:itemTextAppearance">@style/optionMenuTextApearance</item>
        <item name="android:textColorPrimary">@color/text_gray</item>
        <item name="actionMenuTextColor">@android:color/holo_green_light</item>

    </style>

    <style name="optionMenuTextApearance" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="ActionButton" parent="@android:style/Widget.ActionButton">
        <item name="android:drawablePadding">@dimen/action_button_padding</item>
       <!-- <item name="android:minWidth">32dip</item>
        <item name="android:padding">0dip</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeFullscreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="MyTextView" parent="Theme.AppCompat.Light">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/segoeuil_1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleBNV">
        <item name="android:textSize">@dimen/sp_10</item>
        <item name="android:padding">0dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--Input field style-->
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <!-- <item name="colorControlNormal">@color/black31</item>
         <item name="colorControlActivated">@color/txt_color</item>-->
        <item name="android:textSize">@dimen/sp_15</item>
        <!--<item name="android:textColorHint">@color/edt_hint_colour</item>-->
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/segoeui_0</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/edt_def_hint_color</item>
        <item name="android:background">@null</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="customTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabIndicatorHeight">@dimen/dp_1</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black_30</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
    </style>

    <style name="MyTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/segoeui_0</item>
        <item name="android:textStyle" >bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="NumberPickerStyle">
        <item name="android:textSize">22dp</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/colorAccent</item>
    </style>

    <style name="PreviewButtonsStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textSize">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">#fafafa</item>
    </style>


</resources>
